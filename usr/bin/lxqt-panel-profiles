#!/bin/bash
if [ ! -d "~/.local/share/lxqt-panel-profiles/layouts" ]; then
    mkdir -p ~/.local/share/lxqt-panel-profiles/
    cp -r /usr/share/lxqt-panel-profiles/layouts ~/.local/share/lxqt-panel-profiles
    mkdir -p ~/.local/share/lxqt-panel-profiles/layouts/Backup-"$USER"/
    cp ~/.config/lxqt/panel.conf ~/.local/share/lxqt-panel-profiles/layouts/Backup-"$USER"/
fi
python3 /usr/share/lxqt-panel-profiles/lxqt-panel-profiles.py

